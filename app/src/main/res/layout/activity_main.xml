<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/RedBackground">


    <TextView
        android:id="@+id/textView"
        android:layout_width="348dp"
        android:layout_height="74dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:text="How can we help you?"
        android:gravity="center"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/button4"
        android:layout_width="151dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_gravity="center"
        android:background="@color/ButtonBackground"
        android:text="Blood Banks"
        android:onClick="Bank"/>
    <Button
        android:id="@+id/button5"
        android:layout_width="149dp"
        android:layout_height="52dp"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Body Mass Index"
        android:layout_gravity="center"
        android:background="@color/ButtonBackground"
        android:onClick="BMI"/>



    <Button
        android:id="@+id/button"
        android:layout_width="152dp"
        android:layout_height="52dp"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Ask Red Cross"
        android:layout_gravity="center"
        android:background="@color/ButtonBackground"
        android:onClick="CallRedCross"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="151dp"
        android:layout_height="55dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Blood Request"
        android:layout_gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/ButtonBackground"
        android:onClick="BloodRequest"/>




</LinearLayout>